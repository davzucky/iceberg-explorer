{
  "name": "Iceberg Explorer Dev",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspace/iceberg-explorer",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace/iceberg-explorer,type=bind",
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "installOhMyZsh": true,
      "upgradePackages": true
    },
    "ghcr.io/devcontainers/features/git:1": {
      "version": "latest"
    },
    "ghcr.io/devcontainers-extra/features/opencode:1": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "charliermarsh.ruff"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "python.linting.enabled": true,
        "python.linting.ruffEnabled": true,
        "python.formatting.provider": "ruff",
        "editor.formatOnSave": true
      }
    }
  },
  "postCreateCommand": "python /workspace/iceberg-explorer/scripts/bootstrap_lakekeeper.py && uv sync --all-extras && uv run python /workspace/iceberg-explorer/scripts/seed_data.py",
  "containerEnv": {
    "ICEBERG_EXPLORER_CATALOG__TYPE": "rest",
    "ICEBERG_EXPLORER_CONFIG": "/home/vscode/.config/iceberg-explorer/lakekeeper-config.json",
    "ICEBERG_EXPLORER_SERVER__PORT": "8000",
    "AWS_ACCESS_KEY_ID": "minioadmin",
    "AWS_SECRET_ACCESS_KEY": "minioadmin",
    "AWS_ENDPOINT_URL": "http://minio:9000",
    "AWS_REGION": "us-east-1"
  },
  "remoteUser": "vscode",
  "forwardPorts": [8000, 9001],
  "portsAttributes": {
    "8000": {
      "label": "Iceberg Explorer",
      "onAutoForward": "notify"
    }
  }
}
